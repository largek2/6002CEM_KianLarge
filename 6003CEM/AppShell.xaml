<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_6003CEM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_6003CEM"
    xmlns:pages="clr-namespace:_6003CEM.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="_6003CEM">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    
    <ShellContent ContentTemplate="{DataTemplate pages:FrontPage}"
                  Title="Welcome To App"
                  Shell.FlyoutBehavior="Disabled" />
    
    <TabBar>
        <Tab Icon = "home.png">
        <ShellContent 
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage" />
        </Tab>
        <Tab Icon = "cart.png">
        <ShellContent 
            Title="Cart"
            ContentTemplate="{DataTemplate pages:CartPage}"
            Route="CartPage" />
        </Tab>
        <Tab Icon = "user.png">
        <ShellContent 
            Title="My Profile"
            ContentTemplate="{DataTemplate pages:ProfilePage}"
            Route="ProfilePage" />
        </Tab>
    </TabBar>    

</Shell>
